        flex: 1;
        min-width: 0;
    }

    .comment-user {
        font-weight: 700;
        font-size: 0.9rem;
        margin-bottom: 4px;
    }

    .comment-text {
        color: var(--text-primary);
        font-size: 0.95rem;
        line-height: 1.4;
    }

    .comment-date {
        font-size: 0.8rem;
        color: var(--text-muted);
