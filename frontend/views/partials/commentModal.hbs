<!-- Comment Modal -->
<div id="commentModal" class="modal"
    style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 1100; align-items: center; justify-content: center;">
    <div class="modal-content"
        style="background: var(--bg-card); border-radius: 16px; padding: 32px; max-width: 600px; width: 90%; max-height: 80vh; display: flex; flex-direction: column;">
        <div
            style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; flex-shrink: 0;">
            <h2 id="commentModalTitle" style="margin: 0;">Comments</h2>
            <div style="display: flex; gap: 8px; align-items: center;">
                <button id="commentMinimizeBtn" title="Minimize comments"
                    style="background: none; border: none; font-size: 1.1rem; cursor: pointer; color: var(--text-secondary); padding: 4px 8px; transition: color 0.2s;">
                    <i class="fa-solid fa-window-minimize"></i>
                </button>
                <button class="modal-close"
                    style="background: none; border: none; font-size: 1.5rem; cursor: pointer; color: var(--text-secondary);">&times;</button>
            </div>
        </div>

        <!-- Comments List -->
        <div id="commentsList"
            style="flex: 1; overflow-y: auto; margin-bottom: 24px; display: flex; flex-direction: column; gap: 16px; padding-right: 8px;">
            <!-- Comments will be loaded here -->
            <div style="text-align: center; color: var(--text-muted); padding: 20px;">
                Loading comments...
            </div>
        </div>

        <!-- Post Comment Form -->
        <div style="flex-shrink: 0; border-top: 1px solid var(--border-color); padding-top: 24px;">
            <div style="display: flex; gap: 12px;">
                <textarea id="newCommentContent" placeholder="Write a comment..."
                    style="flex: 1; padding: 12px; border-radius: 8px; border: 2px solid var(--border-color); background: var(--bg-secondary); resize: none; height: 80px;"></textarea>
                <button id="postCommentBtn" class="btn btn-primary"
                    style="align-self: flex-end; padding: 12px 24px;">Post</button>
            </div>
        </div>
    </div>
</div>

<!-- Minimized Comment Pill -->
<div id="commentMinimizedPill"
    style="display: none; position: fixed; bottom: 100px; right: 24px; z-index: 1100; background: var(--bg-card); border: 1px solid var(--border-color); border-radius: 24px; padding: 10px 20px; cursor: pointer; box-shadow: 0 8px 24px rgba(0,0,0,0.4); transition: transform 0.2s, box-shadow 0.2s;"
    onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 12px 32px rgba(0,0,0,0.5)'"
    onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 8px 24px rgba(0,0,0,0.4)'">
    <span style="font-size: 0.85rem; font-weight: 700; display: flex; align-items: center; gap: 8px;">
        ðŸ’¬ <span id="commentPillLabel">Comments</span>
        <i class="fa-solid fa-chevron-up" style="font-size: 0.7rem; color: var(--text-muted);"></i>
    </span>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const minimizeBtn = document.getElementById('commentMinimizeBtn');
        const pill = document.getElementById('commentMinimizedPill');
        const modal = document.getElementById('commentModal');

        if (minimizeBtn) {
            minimizeBtn.addEventListener('click', () => {
                // Count comments
                const count = document.querySelectorAll('#commentsList .comment-item').length;
                document.getElementById('commentPillLabel').textContent = `Comments (${count})`;
                modal.style.display = 'none';
                pill.style.display = 'block';
            });
        }

        if (pill) {
            pill.addEventListener('click', () => {
                pill.style.display = 'none';
                modal.style.display = 'flex';
            });
        }
    });
</script>

