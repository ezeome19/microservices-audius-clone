<!-- Tip Modal -->
<div id="tipModal" class="modal"
    style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 1000; align-items: center; justify-content: center;">
    <div class="modal-content"
        style="background: var(--bg-card); border-radius: 16px; padding: 32px; max-width: 500px; width: 90%;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
            <h2 style="margin: 0;">Tip {{artistName}}</h2>
            <button class="modal-close"
                style="background: none; border: none; font-size: 1.5rem; cursor: pointer; color: var(--text-secondary);">&times;</button>
        </div>

        <p style="color: var(--text-secondary); margin-bottom: 24px;">
            Show your support by sending a tip directly to the artist
        </p>

        <!-- Currency Selection -->
        <div style="margin-bottom: 24px;">
            <label style="display: block; margin-bottom: 8px; font-weight: 600;">Currency</label>
            <div style="display: flex; gap: 8px;">
                <button class="tip-currency-btn active" data-currency="NGN"
                    style="flex: 1; padding: 10px; border-radius: 8px; border: 2px solid var(--accent-primary); background: rgba(204, 15, 224, 0.1); color: var(--accent-primary); font-weight: 700; cursor: pointer;">Nigerian
                    Naira (NGN)</button>
                <button class="tip-currency-btn" data-currency="USD"
                    style="flex: 1; padding: 10px; border-radius: 8px; border: 2px solid var(--border-color); background: var(--bg-secondary); cursor: pointer; font-weight: 600;">US
                    Dollar (USD)</button>
            </div>
        </div>

        <!-- Tip Amount -->
        <div style="margin-bottom: 24px;">
            <label style="display: block; margin-bottom: 8px; font-weight: 600;">Tip Amount</label>
            <div style="position: relative;">
                <span id="tipCurrencySymbol"
                    style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%); font-size: 1.2rem; font-weight: 600;">â‚¦</span>
                <input type="number" id="tipAmount" placeholder="500" min="10"
                    style="width: 100%; padding: 16px 16px 16px 40px; border-radius: 8px; border: 2px solid var(--border-color); background: var(--bg-secondary); font-size: 1.2rem; font-weight: 600;">
            </div>
            <p id="tipMinText" style="color: var(--text-secondary); font-size: 0.8rem; margin-top: 8px;">Minimum: â‚¦100
            </p>
        </div>

        <!-- Message (Optional) -->
        <div style="margin-bottom: 24px;">
            <label style="display: block; margin-bottom: 8px; font-weight: 600;">Message (Optional)</label>
            <textarea id="tipMessage" placeholder="Say something nice..."
                style="width: 100%; padding: 12px; border-radius: 8px; border: 2px solid var(--border-color); background: var(--bg-secondary); resize: vertical; min-height: 80px;"></textarea>
        </div>

        <!-- Breakdown -->
        <div style="background: var(--bg-secondary); padding: 16px; border-radius: 8px; margin-bottom: 24px;">
            <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                <span style="color: var(--text-secondary);">Tip Amount</span>
                <span id="tipAmountDisplay">â‚¦0</span>
            </div>
            <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                <span style="color: var(--text-secondary);">Platform Fee (10%)</span>
                <span id="platformFeeDisplay">â‚¦0</span>
            </div>
            <div style="border-top: 1px solid var(--border-color); padding-top: 8px; margin-top: 8px;">
                <div style="display: flex; justify-content: space-between; font-weight: 600;">
                    <span>Artist Receives (90%)</span>
                    <span id="artistReceivesDisplay" style="color: var(--accent-color);">â‚¦0</span>
                </div>
            </div>
        </div>

        <!-- Send Tip Button -->
        <button id="sendTipBtn" class="btn btn-primary"
            style="width: 100%; padding: 16px; font-size: 1.1rem; font-weight: 600;" disabled>
            Send Tip
        </button>

        <p style="text-align: center; color: var(--text-secondary); font-size: 0.8rem; margin-top: 16px;">
            ðŸ’³ Secure payment powered by Flutterwave
        </p>
    </div>
</div>

